meta {
  name: Login Error Validation
  type: http
  seq: 1
}

post {
  url: {{BASE_URL}}/admin/login
  body: json
  auth: none
}

body:json {
  {
    "email": "",
    "password": ""
  }
}

assert {
  res.body.status: isUndefined 
  res.body.message: isDefined
}

tests {
  test("status code is 422", function(){
    expect(res.getStatus()).to.equal(422)
  })
  
  test("message is email wajib diisi. (and 1 more error)", function(){
    expect(res.getBody().message).to.equal("email wajib diisi. (and 1 more error)")
  })
  
  
}
